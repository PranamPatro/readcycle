<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartListShow">
    <LinearLayout
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/secondlayer"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Book Trolley"
            android:textStyle="bold"
            android:textColor="#fff"
            android:textSize="20sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/heading"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:id="@+id/countheading">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Items:"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:gravity="right"
            android:layout_margin="3dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textStyle="bold"
            android:layout_margin="3dp"
            android:textSize="20sp"
            android:gravity="left"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/countheading"
        android:layout_above="@id/buttonproceedoncart"
        android:layout_margin="10dp">
    </android.support.v7.widget.RecyclerView>
    <Button
        android:id="@+id/buttonproceedoncart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/saveback"
        android:layout_alignParentBottom="true"
        android:layout_margin="6dp"
        android:text="PROCEED TO CHECKOUT"
        android:textColor="#fff"
        android:textStyle="bold"/>
</RelativeLayout>