<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="READ CYCLE"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#fff"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/book"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLength="30"
                android:background="@drawable/roundedit"
                android:padding="5dp"
                android:id="@+id/phoneonlogin"
                android:hint="Email I'd"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#000"
                android:layout_margin="3dp"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:maxLength="6"
                android:id="@+id/pinonlogin"
                android:background="@drawable/roundedit"
                android:padding="5dp"
                android:hint="6 digit Pin"
                android:inputType="numberPassword"
                android:layout_margin="3dp"
                android:textAlignment="center"
                android:textColor="#000"
                android:textColorHint="#000"/>
            <Button
                android:id="@+id/proceedonlogin"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/buttonround"
                android:layout_margin="3dp"
                android:text="Proceed"
                android:textColor="#fff"
                android:elevation="16dp"/>
            <TextView
                android:id="@+id/registerhereonlogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New? Register Here"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_margin="3dp"/>

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Help ?"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"/>

</RelativeLayout>
